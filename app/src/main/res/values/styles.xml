<resources>

    <!-- Dialog Anim   -->
    <style name="bottom_dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
    </style>

    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="OverflowStyle">
        <!--parent="android:style/Widget.Holo.Light.ActionButton.Overflow"-->
<!--        <item name="android:src">@drawable/ic_action_add</item>-->
        <item name="android:src">@android:drawable/ic_menu_add</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

    <style name="techstar.MenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>

<!--    Button style-->
    <style name="WhiteButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">@android:color/white</item>
    </style>
    <style name="BlueButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">@color/colorBlue717FFF</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--修改菜单栏右边三个白点图标-->
        <item name="android:actionOverflowButtonStyle">@style/OverflowStyle</item>
        <!--ToolBar右边弹出菜单背景色 不遮拦Toolbar-->
        <item name="actionOverflowMenuStyle">@style/techstar.MenuStyle</item>
    </style>

</resources>